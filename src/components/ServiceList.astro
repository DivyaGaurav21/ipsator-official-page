<div class="mt-8">
  <h1 class="text-center font-bold text-2xl">Our Services</h1>
  <div class="container mx-auto py-5">
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          {servicesData.map((service) => (
              <div class="bg-zinc-100 rounded-lg hover:shadow-2xl transition-transform transform hover:scale-105 duration-300">
                  <img src={service.imgSrc} alt={`Service ${service.id}`} class="w-full h-40 object-cover rounded-t-lg" />
                  <div class="p-4">
                      <h2 class="text-xl font-semibold text-gray-800 text-center">{service.title}</h2>
                      <p class="text-gray-600 mt-2 text-center font-sans">{service.paragraph}</p>
                      <a href="#" class="block text-blue-500 mt-3 hover:underline text-center">Learn More</a>
                  </div>
              </div>
          ))}
      </div>
  </div>
</div>


