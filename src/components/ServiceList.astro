---
import { servicesData } from "../helper/staticData";

---
<h1 class="text-center font-bold text-2xl">Our Services</h1>
<div class="container mx-auto py-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {servicesData.map((service) => (
        <div class="w-full  p-4">
          <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition duration-300">
            <img src={service.imgSrc} alt={`Service ${service.id}`} class="w-full h-40 object-cover rounded" />
            <h2 class="text-xl font-semibold mt-3 text-gray-800 text-center">{service.title}</h2>
            <p class="text-gray-600 mt-2 p-3 min-h-[155px]">{service.paragraph}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
  