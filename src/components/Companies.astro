---
import { companyImages } from "../helper/staticData";
---
<h1 class="text-center md:text-2xl font-bold animation1 my-5">Companies we have worked with</h1>
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 w-full md:w-3/4 mx-auto animation1">
  {companyImages.map((image) => (
    <div class="group relative overflow-hidden rounded-lg shadow-lg transition-transform transform hover:scale-105 p-6">
      <img
        src={image.imgSrc}
        alt={`Company ${image.id}`}
        class="w-[100%] h-auto group-hover:scale-110 transition-transform transform duration-300"
      />
      <div class="absolute top-0 left-0 w-full bg-gradient-to-t from-slate-400 via-transparent to-red-200 p-2"/>
    </div>
  ))}
</div>


  <style>
    @keyframes textAnimation {
  0%{
    transform: translateX(-100%);
    opacity: 0;
  }
  100%{
    transform: translateX(0);
    opacity: 1;
  }
}
.animation1{
  animation-name: textAnimation;
  animation-duration: 1s; 
  animation-timing-function: ease-out;
  animation-fill-mode: forwards;
}

  </style>